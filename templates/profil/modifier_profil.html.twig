{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block main %}
<h1> <div class= "ui  centered column grid">  MODIFIER LE PROFIL </h1>

<div class="ui  centered column grid">

<div class="ui form">
    {{ form_start(form) }}

    <div class="fields">
        <div class="field">{{ form_label(form.username) }}{{ form_widget(form.username) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.prenom) }}{{ form_widget(form.prenom) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.nom) }}{{ form_widget(form.nom) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.telephone) }}{{ form_widget(form.telephone) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.mail) }}{{ form_widget(form.mail) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.password.first) }}{{ form_widget(form.password.first) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.password.second) }}{{ form_widget(form.password.second) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.site) }}{{  form_widget(form.site) }}</div>
    </div>

    <div class="fields">
        <div class="field">{{ form_label(form.url_photo) }}{{ form_widget(form.url_photo) }}</div>
    </div>

    <button class="ui button">  <a type="submit">Enregistrer</a></button>

    {{ form_end(form) }}
</div>



{% endblock %}